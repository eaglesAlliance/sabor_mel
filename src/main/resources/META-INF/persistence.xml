<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="sabor_mel" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>eagles.sabor_mel.model.Documento</class>
    <class>eagles.sabor_mel.model.Pessoa</class>
    <class>eagles.sabor_mel.model.Cidade</class>
    <class>eagles.sabor_mel.model.Estado</class>
    <class>eagles.sabor_mel.model.Endereco</class>
    <class>eagles.sabor_mel.model.Funcionario</class>
    <class>eagles.sabor_mel.model.Telefone</class>
    <class>eagles.sabor_mel.model.Bairro</class>
    <class>eagles.sabor_mel.model.Crediario</class>
    <class>eagles.sabor_mel.model.Fornecimento</class>
    <class>eagles.sabor_mel.model.ItemFornecimento</class>
    <class>eagles.sabor_mel.model.ItemVenda</class>
    <class>eagles.sabor_mel.model.Parcela</class>
    <class>eagles.sabor_mel.model.Produto</class>
    <class>eagles.sabor_mel.model.Venda</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sabor_mel"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="heavy666"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.use_sql_comments" value="false"/>
      <property name="hibernate.jdbc.wrap_result_sets" value="false"/>
      <property name="hibernate.hibernate.cache.use_query_cache" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
